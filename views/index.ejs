<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>F1 Scoreboard</title>
  <link rel="icon" href="https://www.formula1.com/etc/designs/fom-website/images/f1_favicon.png" type="image/x-icon" />
  <!-- Bootstrap CSS desde CDN -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

  <!-- Hoja de estilos personalizada -->
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <!-- Barra de navegación -->
  <nav class="navbar navbar-expand-lg navbar-custom navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand navbar-text active" id="title-text" href="/"><img src="https://www.formula1.com/etc/designs/fom-website/images/f1_logo.svg" alt="F1 Logo" width="auto" height="32px">Scores</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link navbar-text active" href="/">Inicio</a>
          </li>
          <% if (user) { %>
            <li class="nav-item">
            <a class="nav-link navbar-text active" href="/add-team">Agregar Equipo</a>
            </li>
            <li class="nav-item">
            <a class="nav-link navbar-text active" href="/add-drivers">Seleccionar Pilotos</a>
            </li>
            <li class="nav-item">
              <a class="nav-link navbar-text active" href="/logout">Cerrar sesión</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link navbar-text active" href="/login">Iniciar sesión</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>
  
  <!-- Contenido principal -->
  <div class="container my-4">
    <!-- Sección para mostrar el próximo GP y el tiempo restante (a llenarse del lado del cliente) -->
    <div class="mb-4" id="nextGPContainer">
      <h2>Próximo GP: <span id="nextGPName" class="text-primary">Cargando...</span></h2>
      <h4 id="nextGPDate">Cargando...</h4>
      <h4 id="timeRemaining">Calculando...</h4>
    </div>
    
    <!-- Tabla de posiciones -->
    <div class="table-responsive">
      <table class="table text-center table-bordered table-custom">
        <thead >
          <tr>
            <th>Posición</th>
            <th>Equipo</th>
            <th>Últimos Pilotos</th>
            <th>Puntos</th>
          </tr>
        </thead>
        <tbody>
          <% teams.forEach(function(team, index) { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= team.team_name %></td>
              <td><%= team.pilotos %></td>
              <td><%= team.puntos %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Script para obtener el próximo GP del lado del cliente -->
  <script src="/js/nextgp.js"></script>
</body>
</html>
